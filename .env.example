# Database
DATABASE_URL=postgresql://user:password@localhost:5432/snapchat_analytics

# Supabase (Optional - for storage and auth)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Snapchat OAuth
SNAPCHAT_CLIENT_ID=your_snapchat_client_id
SNAPCHAT_CLIENT_SECRET=your_snapchat_client_secret
SNAPCHAT_REDIRECT_URI=http://localhost:3000/api/auth/snapchat/callback

# TikTok OAuth
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=http://localhost:3000/api/auth/tiktok/callback

# Meta (Facebook) OAuth
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_REDIRECT_URI=http://localhost:3000/api/auth/meta/callback

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Encryption Key (for tokens)
ENCRYPTION_KEY=your_32_character_encryption_key_here
